{% extends 'base.html.twig' %}
{% block title %}Liste film{% endblock %}
{% block body %}
	<style>
		.flexbox-container {
			display: -ms-flex;
			display: -webkit-flex;
			display: flex;
			flex-wrap: wrap;
			flex-direction: row;
			justify-content: flex-start;
			align-items: stretch;
			width: 50%;
		}

		.flexbox-container > div {
			width: 50%;
			margin: 0 10px;
			flex: 1;
			padding: 10px;
		}

		.description {
			border: 1px solid black;
			width : 350px;
		}
	</style>
	<h1 class="border border-dark rounded p-2 m-2 text-white bg-primary">
		{% block monTitre %}
			Films
		{% endblock %}
	</h1>
	<center>
		<div class="flexbox-container">
			{% for film in films %}
				<div>
					<img style="width:200px;" src="{{ asset(film.affiche) }}"><br>
					<h1>{{ film.titre }}</h1><br>
					<p class="description">{{ film.description }}</p><br>
					<h5>Dur√©e :{{ film.duree }}</h5>
					<p>Date :{{ film.date | date('d/m/Y')}}</p>
				</div>
			{% endfor %}
		</div>
	</center>
{% endblock %}
